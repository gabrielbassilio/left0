<%- include ('../../partials/header.ejs');%>
<body>
    <div class="container">
        <div class="card mt-4">
            <div class="card-header">
                <h2>Fazer login</h2>
            </div>
            <div class="card-body">
                <form action="/bob/authenticate" method="POST">
                    <small id="Help" class="form-text text-muted">Nome de usuario sem o @</small></br>
                        <label class="sr-only" for="inlineFormInputGroup">Usuário</label>
                        <div class="input-group mb-2">
                          <div class="input-group-prepend">
                            <div class="input-group-text">@</div>
                          </div>
                          <input type="text" name="name" class="form-control" id="inlineFormInputGroup" placeholder="Usuário">
                        </div>
                    <input class="form-control" name="password" type="password" placeholder="********"></br>
                    <button class="btn btn-primary btn-block" type="submit">Entrar</button>
                </form>
            </div>
        </div>
    </div>
</body>
